<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:background="@color/primaryblue"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_finish"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/icon_finish"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/mainpage_appname"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_marginEnd="30dp"
            android:fontFamily="@font/baloo"
            android:gravity="center_vertical"
            android:text="@string/settings"
            android:textAlignment="center"
            android:textColor="@color/textprimwhite"
            tools:ignore="RtlCompat" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:background="@color/secondaryblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        android:clickable="true"
        android:focusable="true"
        app:flow_verticalAlign="center"
        android:id="@+id/settings_account"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_account"
            app:tint="@color/altwhite"
            android:layout_margin="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account"
            android:textColor="@color/softwhite"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:background="@color/secondaryblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_account"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        app:flow_verticalAlign="center"
        android:id="@+id/settings_appsettings"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_appset"
            app:tint="@color/altwhite"
            android:layout_margin="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/application_settings"
            android:textColor="@color/softwhite"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:background="@color/secondaryblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_appsettings"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        app:flow_verticalAlign="center"
        android:id="@+id/settings_help"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_help"
            app:tint="@color/altwhite"
            android:layout_margin="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/help"
            android:textColor="@color/softwhite"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:background="@color/secondaryblue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_help"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:focusable="true"
        app:flow_verticalAlign="center"
        android:id="@+id/settings_signout"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_signout"
            app:tint="@color/altwhite"
            android:layout_margin="12dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_out"
            android:textColor="@color/softwhite"
            android:textSize="20sp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="10dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>